                <p>{% autoescape false %}{{ material.description|raw|length > 200 ? material.description|raw|slice(0, 300) ~ '...': material.description|raw }}{% endautoescape %}</p>
                <p><a class="btn btn-default" href="{{ path('material_show', {'slug': material.slug}) }}" role="button" style="position: absolute; bottom: 3em; left: 3em;">Ver detalles &raquo;</a></p>
